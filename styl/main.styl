.main
    min-height 100vh
    position relative
    overflow hidden

    @media $tablet
      background url(../i/video-bg.jpg)
      background-size cover

    &::before
      content ""
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background linear-gradient(to bottom, rgba(252, 227, 138, 0.7), rgba(243, 129, 129, 0.7))
      z-index 1

    &-content
      position relative
      color #fff
      font-size 30px
      z-index 3

    &-hr
      width 60px
      height 3px
      background-color $color-white
      border 0
      margin 0 auto
