.quotes
    margin-top 120px
    padding 70px 0
    background-color $color-quotes-bg

    @media $phone
        padding 25px 0

    &-square
        width 150px
        height 150px
        margin auto
        padding 25px
        border 3px solid $color-turquoise

        @media $tablet
            width 75px
            height 75px
            padding 15px

        .icon
            display block
            font-size 60px
            color $color-turquoise

            @media $tablet
                font-size 25px

    &-item

        &_text
            margin-bottom 10px
            font 300 24px $font-roboto
            font-style italic
            line-height 1.5
            color $color-gray-text

            @media $tablet
                font-size 20px

            @media $phone
                font-size 15px

        &_author
              margin-bottom 0
              font 400 24px $font-kaushanscript
              vertical-align middle
              color $color-black-text

              @media $phone
                  font-size 18px

              &:before
                  display inline-block
                  width 60px
                  height 3px
                  margin-right 5px
                  content ''
                  vertical-align middle
                  color $color-red
                  background-color $color-red

.orbit

    &-container
        outline none

    &-button
        font-size 20px
        cursor pointer
        color $color-arrows
        mix-transition()

        &:hover,
        &:focus,
        &:active
            background none

        &:hover
            color $color-arrows-hover
