.quotes
    background-color $color-quotes-bg
    margin-top 120px
    padding 70px 0

    @media $phone
        padding 25px 0

    &-square
        width 150px
        height 150px
        border 3px solid $color-turquoise
        margin auto
        padding 25px

        @media $tablet
            width 75px
            height 75px
            padding 15px

        .icon
            font-size 60px
            color $color-turquoise
            display block

            @media $tablet
                font-size 25px

    &-item

        &_text
            font 300 24px $font-roboto
            font-style italic
            color $color-gray-text
            line-height 1.5
            margin-bottom 10px

            @media $tablet
                font-size 20px

            @media $phone
                font-size 15px

        &_author
              font 400 24px $font-kaushanscript
              color $color-black-text
              vertical-align middle
              margin-bottom 0


              @media $phone
                  font-size 18px

              &:before
                  content ''
                  width 60px
                  height 3px
                  color $color-red
                  background-color $color-red
                  display inline-block
                  vertical-align middle
                  margin-right 5px

.orbit

    &-container
        outline none

    &-button
        color $color-arrows
        font-size 20px
        cursor pointer
        transition 0.3s

        &:hover,
        &:focus,
        &:active
            background none

        &:hover
            color $color-arrows-hover
