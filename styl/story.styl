.story
    padding 90px 0 110px

    &-item
        position relative

        @media $phone
            margin-top 30px

        &_img
          margin auto
          width 380px
          height 259px
          mix-transition()
          overflow wrap
          mix-transition()

          @media $tablet
              width 100%
              height auto

          @media $phone
              width 100%
              height auto

        &_hover
            opacity 0
            width 100%
            height 100%
            background linear-gradient(to bottom, $color-gradient-red, $color-gradient-yellow)
            position absolute
            left -10px
            top -10px
            display: flex;
            justify-content: center;
            flex-direction: column;
            text-align: center;
            cursor: pointer;
            color $color-white
            mix-transition()

            .icon
                font-size 20px

            p
                font 600 18px $font-montserrat
                text-transform uppercase
                margin-top 10px

        &:hover
            background-color $color-turquoise

            .story-item_hover
                opacity 1

            img
                position relative
                top -10px
                left -10px
