.wedo

    .accordion

        &-title
            padding 0.75rem 1rem
            font 700 14px $font-montserrat
            text-transform uppercase
            color $color-black-text

            &:before
                font-size 18px
                color $color-arrows

        &-content
            font 300 15px $font-roboto
            font-style italic
            line-height 1.5
            color $color-gray-text

        .icon
            margin-right 20px
            font-size 23px
            vertical-align middle
            color $color-turquoise
