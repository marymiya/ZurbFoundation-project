.testimonial
    margin 100px 0 130px

    &-img
        width 205px
        height 205px
        border-radius 106px
        overflow hidden
        margin auto

        @media $tablet
            width 150px
            height 150px

    &-item

        &_text
            font 300 24px $font-roboto
            font-style italic
            color $color-gray-text
            line-height 1.5
            margin-bottom 10px

            @media $tablet
                font-size 19px

            @media $phone
                font-size 15px

        &_author
            font 400 24px $font-kaushanscript
            color $color-black-text
            vertical-align middle
            margin-bottom 0

            @media $tablet
                font-size 20px

            @media $phone
                font-size 16px

            &:before
                content ''
                width 60px
                height 3px
                color $color-red
                background-color $color-red
                display inline-block
                vertical-align middle
                margin-right 5px
