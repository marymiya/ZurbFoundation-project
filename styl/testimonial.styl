.testimonial
    margin 100px 0 130px

    &-img
        width 213px
        height 213px
        border-radius 106px
        overflow hidden
        float right

    &-item

        &_text
            font 300 24px $font-roboto
            font-style italic
            color $color-gray-text
            line-height 1.5
            margin-bottom 10px

        &_author
              font 400 24px $font-kaushanscript
              color $color-black-text
              vertical-align middle
              margin-bottom 0

              &:before
                  content ''
                  width 60px
                  height 3px
                  color $color-red
                  background-color $color-red
                  display inline-block
                  vertical-align middle
                  margin-right 5px
