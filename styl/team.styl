.team

    &-img
        position relative
        mix-transition()

        @media $tablet
            width 100%
            height auto
            margin-top 20px

        &_hover
            position absolute
            top -10px
            left -10px
            display flex
            justify-content center
            flex-direction column
            width 100%
            height 100%
            cursor pointer
            text-align center
            opacity 0
            color $color-white
            background linear-gradient(to bottom, $color-gradient-red, $color-gradient-yellow)
            mix-transition()

            @media $tablet
                width 100%
                height 100%

            p
                font 600 18px $font-montserrat
                text-transform uppercase

        img
            mix-transition()

        &:hover
            background-color $color-turquoise

            .team-img_hover
                opacity 1

            img
                position relative
                top -10px
                left -10px

    &-social
        width 225px
        margin auto

        @media $tablet
            width auto

        &_item
            padding 10px 0
            border-left 1px solid $color-corall
            background $color-yellow
            mix-transition()

            .icon
                font-size 27px
                color $color-corall

            &:hover
                border-left 1px solid $color-yellow
                background $color-corall

                .icon
                    color $color-yellow

            &.mod-first
                border-left 0

    &-dscr
        margin-top 30px

        @media $phone
            margin-top 10px

    &-name
        margin 0
        font 400 14px $font-montserrat
        color $color-black-text

    &-profession
        margin 15px 0 0
        font 400 14px $font-roboto
        font-style italic
        color $color-gray-text

        @media $phone
            margin-top 10px
